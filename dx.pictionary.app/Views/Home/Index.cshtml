@{
    ViewBag.Title = "Cloud Pictionary";
}

@for (int i = 1; i < 7; i++)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="control-group">
                @Html.ActionLink("Game " + i, "Game", "Home", new {id = i}, new {@class = "btn btn-default btn-lg btn-block"})
            </div>
        </div>
    </div>
}